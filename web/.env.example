# =============================================================================
# Frontend Environment Variables Example
# =============================================================================
# Copy this file to .env.local and update with your values
# This file can be committed to version control as it contains no secrets

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL (adjust based on your deployment)
VITE_API_URL=http://localhost:8080/api

# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:8080/ws

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# RabbitMQ Management UI (leave empty to hide in production)
VITE_RABBITMQ_MANAGEMENT_URL=http://localhost:15672

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================

# Enable debug mode (shows console logs and debug info)
VITE_ENABLE_DEBUG=true

# Enable mock data when API is unavailable
VITE_ENABLE_MOCK_DATA=true

# Log level: debug, info, warn, error
VITE_LOG_LEVEL=debug

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Application title shown in browser tab and header
VITE_APP_TITLE=Tasks Microservice Dashboard

# Enable Vue DevTools in production (not recommended)
VITE_ENABLE_DEVTOOLS=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Health check polling interval (milliseconds)
VITE_HEALTH_CHECK_INTERVAL=30000

# Event polling interval for real-time updates (milliseconds)
VITE_EVENT_POLLING_INTERVAL=5000

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics ID (optional)
# VITE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# For Docker production deployment (use relative URLs)
# VITE_API_URL=/api
# VITE_WS_URL=/ws
# VITE_RABBITMQ_MANAGEMENT_URL=

# For GCP Cloud Run deployment
# VITE_API_URL=https://your-backend-service-url.run.app/api
# VITE_WS_URL=wss://your-backend-service-url.run.app/ws