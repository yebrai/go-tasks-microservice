# =============================================================================
# Frontend Production Environment Variables
# =============================================================================
# This file is used during production builds with `npm run build`

# API Configuration (relative URLs for Nginx proxy)
VITE_API_URL=/api
VITE_WS_URL=/ws

# External Services URLs (empty in production for security)
VITE_RABBITMQ_MANAGEMENT_URL=

# Production Features
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false
VITE_LOG_LEVEL=error

# UI Configuration
VITE_APP_TITLE=Tasks Microservice Dashboard
VITE_ENABLE_DEVTOOLS=false

# Polling/Refresh Intervals (milliseconds) - Longer for production
VITE_HEALTH_CHECK_INTERVAL=60000
VITE_EVENT_POLLING_INTERVAL=10000

# Analytics & Monitoring (configure when needed)
# VITE_ANALYTICS_ID=
# VITE_SENTRY_DSN=